{
	"name": "wordpress-boilerplate",
	"description": "Boilerplate that scaffolds a basic WordPress project using Composer.",
	"repositories": [
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		},
		{
			"type": "package",
			"package": {
				"name": "wordpress/wordpress",
				"type": "webroot",
				"version": "4.1.1",
				"dist": {
					"type": "zip",
					"url": "https://wordpress.org/wordpress-4.1.1.zip"
				},
				"require": {
					"fancyguy/webroot-installer": "1.1.0"
				}
			}
		}
	],
	"require": {
		"wordpress/wordpress": "~4.0",
		"jjgrainger/wp-custom-post-type-class": "~1.0",
		"wpackagist-plugin/advanced-custom-fields": "~4.0",
		"wpackagist-plugin/wordpress-importer": "~0.6"
	},
	"config": {
		"preferred-install": "dist"
	},
	"extra": {
		"installer-paths": {
			"wp-content/plugins/{$name}": ["type:wordpress-plugin"]
		},
		"webroot-dir": "wordpress",
		"webroot-package": "wordpress/wordpress"
	}
}
